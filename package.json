{
  "name": "@annadamm/scribblehub-to-epub",
  "version": "2.3.1",
  "description": "Downloads a book from scribblehub.com and outputs it as an epub file",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "run": "node src/index.js",
    "lint": "npm run lint:css && npm run lint:md",
    "lint:fix": "npm run lint:css:fix && npm run lint:md:fix",
    "lint:css": "stylelint \"assets/styles/**/*.css\"",
    "lint:css:fix": "npm run lint:css -- --fix",
    "lint:md": "markdownlint \"**/*.md\" --ignore node_modules",
    "lint:md:fix": "npm run lint:md -- --fix",
    "scribblehub-to-epub": "npm run run"
  },
  "keywords": [
    "scribblehub",
    "fanfiction",
    "webnovels",
    "books",
    "epub"
  ],
  "author": {
    "name": "Anna Damm",
    "email": "anna.damm87@googlemail.com",
    "url": "https://anna-damm.de/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AnnaDamm/scribblehub-to-epub.git"
  },
  "license": "ISC",
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "cli-progress": "^3.11.2",
    "commander": "^9.5.0",
    "epub-gen-memory": "^1.0.10",
    "find-cache-dir": "^4.0.0",
    "promise-throttle-all": "^1.1.1",
    "yesno": "^0.4.0"
  },
  "homepage": "https://github.com/AnnaDamm/scribblehub-to-epub/",
  "bugs": "https://github.com/AnnaDamm/scribblehub-to-epub/issues",
  "devDependencies": {
    "@tsconfig/node16": "^16.1.1",
    "@types/cheerio": "^0.22.32",
    "@types/cli-progress": "^3.11.2",
    "@types/find-cache-dir": "^5.0.0",
    "markdownlint-cli": "^0.33.0",
    "pre-commit": "^1.2.2",
    "stylelint": "^14.16.1",
    "typescript": "^5.2.2"
  },
  "bin": {
    "scribblehub-to-epub": "src/index.js"
  },
  "files": [
    "assets",
    "src/**/*.js"
  ],
  "standard": {
    "ignore": [
      "dist"
    ]
  },
  "pre-commit": [
    "lint:fix"
  ]
}
